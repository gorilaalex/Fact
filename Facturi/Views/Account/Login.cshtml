@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/AnonymousLayout.cshtml";
}

<script src="@Url.Content("~/Scripts/Account/login-module.js")" type="text/javascript"></script>



<div id="container" class="container center">
    <div class="login-page">
        <div class="login-form">

            <div>
                <h3>Login</h3>
            </div>
            <form class="form-horizontal" method="post" action="" autocomplete="off" id="login">
                <div class="control-group">
                    <span data-bind="text: Message"></span>
                </div>
                <div class="form-group">
                            <label class="col-sm-2 control-label" for="inputEmail">Email address</label>
                    <div class="col-sm-10">
                        <input type="email" name="username" id="inputEmail" placeholder="Enter email" data-bind="value: Model().Username">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="inputPassword">Password</label>
                    <div class="col-sm-10">
                        <input type="password" name="password" id="inputPassword" placeholder="Password" data-bind="value: Model().Password">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-10">
                        <div class="checkbox">
                            <label class="checkbox">
                                <input type="checkbox" data-bind="checked: Model().RememberMe ">
                                Remember me
                            </label>
                            <button class="btn btn-success" type="button" data-bind="click: login">Sign in</button>
                        </div>
                    </div>
                </div>
            </form>
            <div>
                <label>You don't have an account? </label>
                <div>
                    <button class="btn btn-primary" data-bind="click: signUp">SignUp</button>
                </div>
            </div>
        </div>
    </div>
    <div class="clear"></div>
</div>


