@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/AnonymousLayout.cshtml";
}

<script src="~/Scripts/Account/login-module.js" type="text/javascript"></script>

<script src="~/Scripts/Utils/ext/aes.js" type="text/javascript"></script>
<div id="container" class="container">
    <div style="align-content: center;border-top:5px;">
        <div>
            <h3>Login</h3>
        </div>
        <form class="no-auth-form form-horizontal" method="post" action="" autocomplete="off" id="login">
            <div class="control-group">
                <span data-bind="text: Message"></span>
            </div>
            <div class="control-group">
                <label class="control-label" for="inputEmail">Email address</label>
                <div class="controls">
                    <input type="email" name="username" id="inputEmail" placeholder="Enter email" data-bind ="value: Model().Username">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="inputPassword">Password</label>
                <div class="control">
                    <input type="password" name="password" id="inputPassword" placeholder="Password" data-bind ="value: Model().Password">
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <div class="checkbox">
                        <label class="checkbox">
                            <input type="checkbox" data-bind="checked : Model().RememberMe ">
                            Remember me
                        </label>
                    <button class="btn btn-success" type="submit" data-bind="click: login">Sign in</button>
                    </div>
                </div>
            </div>
        </form>
        <div>
            <label>You don't have an account? </label>
            <div>
            <button class="btn btn-primary" data-bind="click: signUp">SignUp</button>
                </div>
        </div>
    </div>
</div>


